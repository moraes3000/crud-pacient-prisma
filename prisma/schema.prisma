datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String
  password   String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("users")
}

model Pacient {
  id   String @id @default(uuid())
  name String

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  consulta Consult[]

  @@map("pacientes")
}

model Consult {
  id String @id @default(uuid())

  description String

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  Pacient     Pacient? @relation(fields: [paciente_id], references: [id])
  paciente_id String?

  @@map("consulta")
}
